
// deployment specification with simple host declarations

specification a.b.c.MySpec03 {

	// related to basic data types
	for floats {
		PropFloat : Integer;
	}
	for integers {
		PropInteger : Integer;
	}
	for numbers {
		PropNumber : Integer;
	}
	for strings {
		PropString : Integer;
	}
	for booleans {
		PropBoolean : Integer;
	}
	for byte_buffers {
		PropByteBuffer : Integer;
	}
	
	// related to user-defined types
	for enumerations {
		PropEnumeration : Integer;
	}
	for enumerators {
		PropEnumerator : Integer;
	}
	for arrays {
		PropArray : Integer;
	}
	for structs {
		PropStruct : Integer;
	}
	for unions {
		PropUnion : Integer;
	}
	for struct_fields {
		PropStructField : Integer;
	}
	for union_fields {
		PropUnionField : Integer;
	}
	for fields {
		PropField : Integer;
	}
	for typedefs {
		PropTypedef : Integer;
	}
}
